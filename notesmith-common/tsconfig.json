{
	"compilerOptions": {
		"target": "ES2022",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ES2022",
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"composite": true,
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true
	},
	"include": ["./src/**/*"]
}
